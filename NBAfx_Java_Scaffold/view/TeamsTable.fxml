<VBox fx:controller="controller.TeamsController" styleClass="background" prefHeight="550.0" prefWidth="800.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
   <TableView fx:id="teamsTv" styleClass="table-view">
        <columns>
            <TableColumn fx:id="teamNameColumn" text="Team Name" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="numberOfPlayersColumn" text="Number of Players" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="numberOfPlayers"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="averagePlayerCreditColumns" text="Average Player Credit" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="averagePlayerCredit"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="averageAgeColumn" text="Average Age" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="averageAge"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <GridPane fx:id="buttonGrid" alignment="BOTTOM_CENTER" hgap="10" vgap="10">
        <Button fx:id="addTeamButton" onAction="#addTeam" text="Add" styleClass="button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button fx:id="manageTeamButton" onAction="#manageTeam" text="Manage" styleClass="button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button fx:id="deleteTeamButton" onAction="#deleteTeam" text="Delete" styleClass="button" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button fx:id="closeButton" onAction="#close" text="Close" styleClass="button" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
    </GridPane>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
