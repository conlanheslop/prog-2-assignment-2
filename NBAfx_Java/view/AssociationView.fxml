<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox styleClass="background" prefHeight="450.0" prefWidth="650.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AssociationController">
    <ImageView fitWidth="650.0" fitHeight="225.0">
        <image>
            <Image url="view/NBA_Back.jpg"/>
        </image>
    </ImageView>

    <GridPane alignment="CENTER" hgap="15" vgap="15">
        <Button onAction="#exploreTeams" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="button" fx:id="exploreTeamsButton" text="Explore the teams"/>
        <Button onAction="#newSeason" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="button" fx:id="newSeasonButton" text="Arrange a new season"/>
        <Button onAction="#exit" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="button" fx:id="exitButton" text="Exit"/>
    </GridPane>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
